<% content_for :meta_title, "Agence marketing web Aix en provence – SEO – site internet" %>
<% content_for :meta_description, "Créez / Optimiser votre site internet, son référencement | Dataweb Univers : agence de marketing web, SEO / SEA et développement à aix en provence – Théo Dumez" %>
<% content_for :meta_robots, "noindex" %>

<%= render "shared/navbar" %>

<div class="flex-center mt-5">
  <div class="w50-1 flex-center flex-column">
    <div class="contact-text relative">
      <h1 class="h1 black-olive"><%= t(".change_your_password") %></h1>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password,
                      label: t(".new_password"),
                      required: true,
                      autofocus: true,
                      hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: t(".confirm_new_password"),
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(".change_my_password"), class: "btn btn-outline-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <%= image_tag(asset_path('online_posts.svg'), alt: 'se connecter', class: 'img-contact-form') %>
</div>

<%= render "shared/footer" %>